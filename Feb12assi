amt=int(input("enter amount:"))

if (amt>0):
   if amt>5000:
       dis=amt*10/100
       tax=dis+10
elif amt>3000:
       dis=amt*8/100
       tax=dis+18
elif amt>2000:
       dis=amt*5/100
       tax=dis+18
elif amt>1000:
       dis=amt*3/100
       tax=dis+18
       print("discount",dis)
       print("tax value",tax)
       print("total ",amt-dis+tax)
